---
export interface Props{
  title: string;
}

const { title } = Astro.props
const semanticTitle = title.replace(/[^a-zA-Z0-9]/g, '-').toLowerCase();
---

<section class='max-w-5xl mx-auto flex flex-col gap-9 w-full'>
	<h2 id={semanticTitle} class='text-center text-white font-bold text-4xl'>{title}</h2>
	<slot />
</section>