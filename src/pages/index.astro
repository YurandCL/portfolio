						<li><a href='https://www.linkedin.com/in/yurand-coloma-linares-b8506318a/' target='_blank' ><Icon name='linkedin' width={36} height={36}/></a></li>
						<li><a href='mailto:yurandcolomalinares@gmail.com'><Icon name='gmail' width={36} height={36}/></a></li>
					</ul>
				</div>
			</div>
		</Section>
		<Section title='Experiencia Laboral'>
			<MasonryContainer>
				{experiences.map((experience) => (
					<MasonryItem order={experience.order}>
						<Card
							author={experience.author}
							startDate={experience.startDate}
							endDate={experience.endDate}
							url={experience.url}
							image={experience.image}
							country={experience.country}
							rol={experience.rol}
							title={experience.title}
							tags={experience.tags}
						/>
					</MasonryItem>
				))}
			</MasonryContainer>
		</Section>

		<Section title='Contacto'>
			<div class='flex gap-6 md:flex-row flex-col'>
				<ContactForm />
				<div class='bg-secondary-500 rounded p-4 w-full grid grid-cols-3 justify-center items-center gap-4 flex-wrap'>
					<a class='flex items-center gap-1 justify-center' href='https://www.linkedin.com/in/yurand-coloma-linares-b8506318a/' target='_blank'>
